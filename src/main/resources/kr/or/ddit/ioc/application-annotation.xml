<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<!-- 기존 spring bean 선언 :  <bean id="" class=""/> -->
	<!-- annotation : scan을 실시할 패키지, 해당 패키지를 스캔하며 
		@Component, @Controller, @Service, @Repostitory를 선언한 클래스를 확인하여
		spring bean으로 생성 ==> context namespace에서 제공해주는 태그를 사용-->
		
	<!-- 스캔된 클래스간 의존 관계 설정 -->
	<context:annotation-config/>
	
	<!-- @Component, @Controller, @Service, @Repostitory을 선언한 클래스 스캔 -->
	<context:component-scan base-package="kr.or.ddit.ioc.annotation">
	</context:component-scan>
	

</beans>
